<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context="com.proyecto.RutApp.inicio">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="10dp"
        android:paddingRight="16dp"
        android:paddingBottom="10dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="189dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:visibility="visible"
            app:srcCompat="@drawable/i_t" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/black_ops_one"
            android:text="RutApp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="#1B222E"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textAlignment="center"
            android:hint="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textColorHint="#BABABA"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape"
            android:backgroundTint="#1B222E"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textColorHint="#BABABA"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnLogin"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/shape"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/black_ops_one"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1B222E"
            android:textSize="22sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnRegistroU"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/shape"
            android:backgroundTint="#FFFFFF"
            android:text="Registrarme como usuario"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1B222E"
            android:textSize="14sp"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btnRegistroC"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/shape"
            android:backgroundTint="#FFFFFF"
            android:text="Registrarme como conductor"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1B222E"
            android:textSize="14sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnOlvideC"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            android:background="@drawable/shape"
            android:backgroundTint="#FFFFFF"
            android:text="Olvide la contraseÃ±a"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#1B222E"
            android:textSize="14sp"
            android:textStyle="italic" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>